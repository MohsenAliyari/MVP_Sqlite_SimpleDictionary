<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="iransans_boldStyle">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/text_color_black</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:padding">@dimen/margin4</item>
    </style>

    <style name="iransans_normalStyle">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:color">@color/text_color_gray700</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:padding">@dimen/margin2</item>
    </style>
</resources>
